{
    "name": "kevins/theme",
    "description": "Kevin's Theme",
    "version": "2",
    "type": "project",
    "homepage": "https://kevinpirnie.com/",
    "readme": "readme.txt",
    "license": "MIT",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Kevin Pirnie",
            "email": "iam@kevinpirnie.com",
            "homepage": "https://kevinpirnie.com",
            "role": "Developer"
        }
    ],
    "funding": [
        {
            "type": "paypal",
            "url": "https://www.paypal.biz/kevinpirnie"
        },
        {
            "type": "ko-fi",
            "url": "https://ko-fi.com/kevinpirnie"
        }
    ],
    "require": {
        "php": ">=8.4",
        "kevinpirnie/kpt-wpfieldframework": ">=1"
    },
    "autoload": {
        "classmap": [
            "work/inc/"
        ],
        "files": [
            "work/kpt.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "classmap-authoritative": true,
        "apcu-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "cs-check": "phpcs src --standard=PSR12 --ignore=*.js,*.css -n",
        "cs-fix": "phpcbf src --standard=PSR12 --ignore=*.js,*.css -n"
    }
}