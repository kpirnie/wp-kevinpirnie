{
    "name": "kevinpirnie-theme",
    "version": "1.0.0",
    "scripts": {
        "build:tw": "tailwindcss -i ./assets/css/main.css -o ./assets/css/tw.css",
        "build:concat": "cat ./assets/css/tw.css ./assets/css/fa-svg-icons.css ./assets/css/theme.css > ./assets/css/theme.debug.css",
        "build:minify": "cssnano ./assets/css/theme.debug.css ./assets/css/theme.min.css",
        "build:js": "node esbuild.config.js",
        "build:clean": "rm -f ./assets/css/tw.css",
        "build": "npm run build:tw && npm run build:concat && npm run build:minify && npm run build:js && npm run build:clean"
    },
    "devDependencies": {
        "cssnano": "^7",
        "cssnano-cli": "^1",
        "esbuild": "^0.20.0",
        "postcss": "^8",
        "tailwindcss": "^3"
    }
}