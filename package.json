{
    "name": "kevinpirnie-theme",
    "version": "1.0.0",
    "scripts": {
        "build:tw": "tailwindcss -i ./assets/css/main.css -o ./assets/css/tw.css",
        "build:concat": "cat ./assets/js/theme.min.css ./assets/css/tw.css ./assets/css/theme.css > ./assets/css/theme.debug.css && rm -f ./assets/css/tw.css",
        "build:minify": "cssnano ./assets/css/theme.debug.css ./assets/css/theme.min.css",
        "build:phosphor:css": "cat ./node_modules/@phosphor-icons/web/src/bold/style.css ./node_modules/@phosphor-icons/web/src/duotone/style.css ./node_modules/@phosphor-icons/web/src/fill/style.css ./node_modules/@phosphor-icons/web/src/light/style.css ./node_modules/@phosphor-icons/web/src/regular/style.css ./node_modules/@phosphor-icons/web/src/thin/style.css > ./assets/css/theme.debug.css",
        "build:js": "node esbuild.config.js",
        "build": "npm run build:phosphor:css && npm run build:tw && npm run build:js && npm run build:concat && npm run build:minify && rm -f ./assets/js/theme.min.css"
    },
    "devDependencies": {
        "@phosphor-icons/web": "^2.1.1",
        "cssnano": "^7",
        "cssnano-cli": "^1",
        "esbuild": "^0.20.0",
        "esbuild-plugin-copy": "^2.1.1",
        "postcss": "^8",
        "tailwindcss": "^3"
    }
}