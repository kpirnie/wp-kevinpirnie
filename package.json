{
    "name": "kevinpirnie-theme",
    "version": "1.0.0",
    "scripts": {
        "build:css": "tailwindcss -i ./assets/css/theme.css -o ./assets/css/theme.min.css --minify",
        "build:js": "terser ./assets/js/theme.js -o ./assets/js/theme.min.js -c -m",
        "build": "npm run build:css && npm run build:js"
    },
    "devDependencies": {
        "tailwindcss": "^3.4.0",
        "terser": "^5.36.0"
    }
}